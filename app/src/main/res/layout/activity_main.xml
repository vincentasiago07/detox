<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:fontFamily="sans-serif-condensed-medium"
        android:id="@+id/TEXT"
        android:textColor="#9C27B0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PLEASE ENTER VALID INFORMATION" />
    <EditText
        android:id="@+id/mEdtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-medium"
        android:hint="ENTER NAME"
        android:inputType="textPersonName"
        android:textColor="#FFC107" />

    <EditText
        android:id="@+id/mEdtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-medium"
        android:hint="ENTER E-MAIL"
        android:inputType="textEmailAddress"
        android:textColor="#FFC107" />

    <EditText
        android:id="@+id/mEdtAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-medium"
        android:hint="ENTER AGE "
        android:inputType="number"
        android:textColor="#FFC107" />

    <Button
        android:id="@+id/mBtnsave"
        android:backgroundTint="#BC0B0B"
        android:layout_width="match_parent"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_height="wrap_content"
        android:text="SAVE" />

    <Button
        android:id="@+id/mBtnview"
        android:backgroundTint="#BC0B0B"
        android:layout_width="match_parent"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_height="wrap_content"
        android:text="VIEW RECORDS" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="263dp"
        app:srcCompat="@drawable/arms" />



</LinearLayout>